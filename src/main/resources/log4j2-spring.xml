<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="spring-learn" packages="">
    <properties>
        <property name="LOG_HOME">./</property>
    </properties>

    <Appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}] -[%X{TRACE_ID}]- [%t] [%p] - %logger{1.} - %m%n"/>
        </console>
        <RollingRandomAccessFile name="RollingRandomAccessFile" fileName="${LOG_HOME}/server_info.log"
                                 immediateFlush="false"
                                 bufferSize="1024"
                                 filePattern="${LOG_HOME}/server_info-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="7">
                <Delete basePath="${LOG_HOME}/" maxDepth="1">
                    <IfFileName glob="server_info-*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="RollingRandomAccessFileError" fileName="${LOG_HOME}/server_error.log"
                                 immediateFlush="false"
                                 filePattern="${LOG_HOME}/server_error-%d{yyyy-MM-dd}.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="7">
                <Delete basePath="${LOG_HOME}/" maxDepth="1">
                    <IfFileName glob="server_error-*.log"/>
                    <IfLastModified age="7d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingRandomAccessFile>
    </Appenders>
    <Loggers>
        <Root level="INFO" includeLocation="false">
            <AppenderRef ref="RollingRandomAccessFile"/>
            <AppenderRef ref="RollingRandomAccessFileError"/>
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.zhc" level="debug" additivity="false">
            <AppenderRef ref="RollingRandomAccessFile"/>
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>